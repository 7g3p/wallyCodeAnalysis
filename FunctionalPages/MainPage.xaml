<Page x:Class="SPWally.FunctionalPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SPWally.FunctionalPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <StackPanel Background="AliceBlue">
        <TextBlock Text="Welcome To the Wally's Wonderful World Of Wallcoverings!" TextWrapping="Wrap" TextAlignment="Center" Foreground="DarkBlue" FontSize="40" FontFamily="Algerian" Width="780" Margin="10"/>
        <Button x:Name="ExistingCustomer" Content="Existing Customer" Click="ExistingCustomer_Click" Height="25" Width="105" Margin="10" />
        <Button x:Name="NewCustomer" Content="New Customer" Click="NewCustomer_Click" Height="25" Width="105" Margin="10"/>
        <Button x:Name="LookOrder" Content="Look-up Order" Click="LookOrder_Click" Height="25" Width="105" Margin="10"/>
        <Button x:Name="InvLevels" Content="Inventory Levels" Click="InvLevels_Click" Height="25" Width="105" Margin="10"/>
    </StackPanel>
</Page>
